@model FeaturedViewModel

@if (Model != null)
{
    <section class="featured">
        <div class="container">

            @if (!string.IsNullOrEmpty(Model.Title))
            {

                <h1 class="title">@Model.Title</h1>
                <p class="view-all">@Model.Ingress<i class="fa-solid fa-arrow-right" id="arrow-icon"></i></p>

            }


            @if (Model.FeaturedItems != null)
            {
                <div class="grid">
                    @foreach (var item in Model.FeaturedItems)
                    {
                        <partial name="/Views/Partials/Home/_FeaturedItem.cshtml" model="item" />
                    }
                </div>
            }
        </div>
    </section>


}
