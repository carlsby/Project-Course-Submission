@model ChangePasswordViewModel

<section class="newpw-section">
    <div class="container newpw-container">
        <div class="row">
            <div class="col-12 newpw-welcome-div">
                <h1 class="newpw-title">
                    Enter new password and confirm.
                </h1>
            </div>

            <form method="post" novalidate>

                <div class="input-div col-12 mb-3 d-flex justify-content-center">
                    <input asp-for="CurrentPassword" type="password" class="form-control account-input" id="confirm-pw" />
                    <i class="fas fa-eye-slash input-confirm-pw" onclick="toggleConfirmPassword()"></i>
                    <p class="input-text">Current password</p>
                </div>

                <div class="input-div col-12 mb-3 d-flex justify-content-center">
                    <input asp-for="NewPassword" type="password" class="form-control account-input" id="pw" />
                    <i class="fas fa-eye-slash input-pw" onclick="togglePassword()"></i>
                    <p class="input-text">Password</p>
                </div>

                <div id="message" style="display:none;">
                    <small class="text-danger"><span asp-validation-for="NewPassword"></span></small>
                    <span id="letter" class="invalid">A <b>lowercase</b> letter,</span>
                    <span id="number" class="invalid">a <b>number,</b></span>
                    <span id="capital" class="invalid">a <b>capital (uppercase)</b> letter,</span>
                    <span id="length" class="invalid">Minimum <b>8 characters,</b></span>
                    <span id="special" class="invalid">Minimum 1 <b>special</b> character</span>
                </div>

                <div class="col-12">                                
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger register-validation mb-3"></div>
                </div>

                <div class="mb-4">
                    <button type="submit" class="ftpd-send-btn col-12">
                        Send
                    </button>
                </div>

            </form>

        </div>
    </div>
</section>

<script>
    validationScript();
</script>